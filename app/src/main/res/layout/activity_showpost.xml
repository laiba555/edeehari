<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1cee2"
    tools:context=".showpost">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fst">


        <TextView
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:gravity="left"
            android:text="دانش اقبال "
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            android:layout_below="@id/first"
            android:background="@color/white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:gravity="left"
            android:text="AOA..  I need a professional graphic designer. Design logo and banners for my new company"
            android:textSize="17dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#3a5785"
            android:onClick="chat"
            android:padding="14dp"
            android:text="تجویز دیں" />
        <Button
            android:id="@+id/but"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/post"
            android:layout_marginLeft="265dp"
            android:backgroundTint="#3a5785"
            android:padding="14dp"
            app:icon="@drawable/ic_baseline_chat_24" />


</RelativeLayout>

</LinearLayout>